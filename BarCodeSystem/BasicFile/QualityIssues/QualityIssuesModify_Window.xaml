                <RadioButton Name="rbtn_IsItemIssueYes" Content="是"></RadioButton>
                <RadioButton Name="rbtn_IsItemIssueNo" Content="否"></RadioButton>
            </StackPanel>
            <TextBlock Text="是否加工问题:"  Grid.Row="1" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"></TextBlock>
            <StackPanel Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" Margin="5">
                <RadioButton Name="rbtn_IsProduceIssueYes" Content="是"></RadioButton>
                <RadioButton Name="rbtn_IsProduceIssueNo" Content="否"></RadioButton>
            </StackPanel>
            <TextBlock Text="是否上道工序问题:" TextWrapping="Wrap" Grid.Row="1" FontSize="14" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4"></TextBlock>
