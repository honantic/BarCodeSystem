<Window x:Class="BarCodeSystem.SystemManage.Loading_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:GifImageLib;assembly=GifImageLib"
        WindowStyle="None"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="Loading_Window" Height="40" Width="400">
    <Grid Background="Transparent">
        <Grid Width="400" Height="40" Background="Green" Opacity="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <gif:GifImage Source="../../Images/Loading.gif" Margin="5" ></gif:GifImage>
            <TextBlock Grid.Column="1" Background="Green" Foreground="White" Name="textb_Info" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"></TextBlock>
        </Grid>
    </Grid>
</Window>
